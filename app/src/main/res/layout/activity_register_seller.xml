<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="purvil12c.com.quickdeal.SellerActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:titleTextColor="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER AS SELLER"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        style="@style/sectionHeader"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:hint="Company Name"
        android:drawableLeft="@drawable/ic_user"
        />
    <EditText
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_company_name"
        android:hint="Email address"
        />
    <EditText
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Create Password"
        />
    <EditText
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Confirm Password"
        />
    <EditText
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_service"
        android:hint="Select your Service Category"
        />
    <EditText
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:hint="Phone number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will receive OTP number on this number"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Register Now"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/register_button"
        android:textColor="#ffffff"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/already_tv"
        android:text="Already have an account? Sign in now"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_gravity="center"
        />


</LinearLayout>
